<h1>New Post</h1>
<%
    # t.string "title"
    # t.text "description"
    # t.date "posted_on"
    # t.integer "place_id"
    # t.datetime "created_at", precision: 6, null: false
    # t.datetime "updated_at", precision: 6, null: false
    %>

<%= form_with model: @post do |form| %>
  <p>
    <%= form.label "title" %>
    </p>
    <p>
    <%= form.text_field "title" %>
    </p>
    <p>
    <%= form.label "description" %>
    </p>
    <p>
    <%= form.text_area "description" %>
    </p>
      <p>
    <%= form.label "posted_on" %>
    </p>
    <p>
    <%= form.text_field "posted_on" %>
  </p>
  
  <!-- So we can transfer state from the previous action to the next -->
  <%= form.hidden_field "place_id" %>
  <%= form.submit %>
<% end %>

<p><a href="/places">Back to All Places</a></p>